<div class="row">
	<div class="col-md-12"><%= link_to "new",new_restaurant_path,:class=>"btn btn-default" %>
	</div>
</div>
<table class="table table-striped">
	<thead >
		<tr>
			<th class="col-md-2">名字</th>
			<th class="col-md-6">位置</th>
			<th class="col-md-4"></th>
		</tr>
	</thead><!--thead-->
	<tbody class="tbody">
		<% @restaurants.each do |f| %>
		<tr >
			<td class="col-md-2"><%=f.name %></td>
			<td class="col-md-6"><%=f.location%></td>
			<td class="col-md-4">
				<div class="btn-group">
						<%= link_to "show", restaurant_path(f),:class=>"btn btn-primary" %>
						<%= link_to "edit", edit_restaurant_path(f),:class=>"btn btn-default" %>
						<%= link_to "delete", restaurant_path(f),:method=>:delete,:class=>"btn btn-danger" %>
				</div><!--btn-group-->
			</td>
		</tr>
	<% end %>
	</tbody><!--tbody-->
</table><!--table-->